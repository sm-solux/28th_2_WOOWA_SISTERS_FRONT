<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/item_book_background"
    android:elevation="5dp"
    app:layout_constrainedHeight="true"
    app:layout_constraintBottom_toBottomOf="parent">

    <!-- 책 이미지 -->
    <ImageView
        android:id="@+id/book_cover_info"
        android:layout_width="110dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <!-- 책 정보 -->
    <TextView
        android:id="@+id/book_title_info"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"
        android:text="Title"
        android:textSize="20dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/book_cover_info"
        app:layout_constraintStart_toEndOf="@id/book_cover_info"/>

    <TextView
        android:id="@+id/book_author_info"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"
        android:text="Author"
        android:textSize="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/book_title_info"
        app:layout_constraintStart_toEndOf="@id/book_cover_info" />

    <TextView
        android:id="@+id/book_genre_info"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"
        android:text="Author"
        android:textSize="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/book_author_info"
        app:layout_constraintStart_toEndOf="@id/book_cover_info" />

</androidx.constraintlayout.widget.ConstraintLayout>