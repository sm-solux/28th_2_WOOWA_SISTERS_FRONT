<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주목할 만한 신작 리스트"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/songmyung"
                android:layout_marginTop="40sp"
                android:layout_marginHorizontal="40sp"
                android:layout_gravity="center_horizontal"
                android:shadowRadius="10.0"
                android:shadowDx="20.0"
                android:shadowDy="20.0"
                android:shadowColor="@color/light_gray"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- 사실 vertical인지 horizontal인지 모르겠음 돌려봐야 알 듯-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_book_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp" />

            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/button_search"
                android:layout_marginHorizontal="30sp"
                android:layout_marginVertical="20dp"
                android:text="      검색       책 제목"
                android:textSize="17sp"
                android:textColor="@color/gray"
                android:gravity="left|center"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최근에 생성된 모임"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginVertical="20sp"
                    android:layout_marginHorizontal="30sp"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"/>

                <ImageButton
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/baseline_favorite"
                    android:layout_weight="1"
                    android:layout_gravity="right|center" />


            </LinearLayout>










        </LinearLayout>

    </ScrollView>

</FrameLayout>