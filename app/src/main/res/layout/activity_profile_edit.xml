<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="30dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_profile_edit"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <TextView
            android:id="@+id/toolbar_profile_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="회원 정보 수정"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="19dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="3글자 이상의 닉네임"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="snowhite@sookmyung.ac.kr"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:inputType="textEmailAddress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지역 설정"
        android:textSize="19dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/button_search"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="15dp"
        android:text="        검색"
        android:gravity="left|center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관심 장르"
        android:textSize="19dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>

    <!-- 장르 버튼 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/button_greenbackground"
        android:text="수정 완료"
        android:textColor="@color/white"
        android:textSize="20dp" />

</LinearLayout>